# EditorConfig is awesome: https://EditorConfig.org
#
# Root file
root = true

# General configuration for the code files
[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JSON, YAML and alike work better with less spacing
[*.{json,yml,yaml,todo}]
indent_size = 2
